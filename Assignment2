    this.name = teacher_Name,
    this.teacherPhone =  teacher_Phone,
    this.teacherSubjects = teacher_Subjects,

    this.greet = function () {
        return ('Hi' + ' ' + this.name);
    }
    
}


// creating objects
const student1 = new Student('John', 'BIT', 'pune', 442102);
const Teacher1 = new Student('Rani', 'iPhone', 'Math');

// accessing properties
console.log(student1.name);
console.log(Teacher1.name);







